{
  "name": "pigeon",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prettify": "prettier --write './**/*.{js,json,yml}'",
    "test": "jest",
    "release:version": "lerna version --no-push",
    "release:publish": "lerna publish from-package"
  },
  "devDependencies": {
    "coveralls": "^3.0.9",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "collectCoverage": true,
    "projects": [
      "<rootDir>/packages/*"
    ]
  }
}
